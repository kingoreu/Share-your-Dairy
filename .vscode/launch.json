{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "ServerApplication",
      "request": "launch",
      "mainClass": "com.share.dairy.ServerApplication",
      "projectName": "dairy",
      "envFile": "${workspaceFolder}/.env"
    },

    {
      "type": "java",
      "name": "HelloApplication",
      "request": "launch",
      "mainClass": "com.share.dairy.app.HelloApplication",
      "projectName": "dairy",
      "vmArgs": "--module-path \"C:/Java/javafx-sdk-21.0.8/lib\" --add-modules javafx.controls,javafx.fxml",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "java",
      "name": "Launcher",
      "request": "launch",
      "mainClass": "com.share.dairy.app.Launcher",
      "projectName": "dairy",
      "vmArgs": "--module-path \"C:/Java/javafx-sdk-21.0.8/lib\" --add-modules javafx.controls,javafx.fxml",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "java",
      "name": "Current File",
      "request": "launch",
      "mainClass": "${file}",
      "vmArgs": "--module-path \"C:/Java/javafx-sdk-21.0.8/lib\" --add-modules javafx.controls,javafx.fxml",
      "envFile": "${workspaceFolder}/.env"
    }
  ],
  "compounds": [
    {
      "name": "Run Server + HelloApp",
      "configurations": ["ServerApplication", "HelloApplication"]
    }
  ]
}
