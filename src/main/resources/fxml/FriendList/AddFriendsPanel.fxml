<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.share.dairy.controller.FriendList.AddFriendsPanelController"
            prefWidth="820" prefHeight="560" style="-fx-background-color: white">

    <!-- Top: 홈 버튼(오버레이 닫기 = OverlayChildController.goHome) -->
    <top>
        <ToolBar>
            <Button text="Home" onAction="#goHome"/>
            <Separator/>
            <Label text="친구 추가"/>
        </ToolBar>
    </top>

    <!-- Left: 사이드 탭 (오버레이 내 라우팅) -->
    <left>
        <VBox spacing="8" alignment="TOP_LEFT" padding="10">
            <Button text="내 정보" onAction="#goMyInfo" />
            <Button text="친구 목록" onAction="#goBuddyList" />
        </VBox>
    </left>

    <!-- Center: 본문 -->
    <center>
        <VBox spacing="14" alignment="TOP_LEFT" padding="20">
            <HBox spacing="8">
                <TextField fx:id="tfSearchId" promptText="ID 또는 닉네임 입력"/>
                <Button text="검색" onAction="#onSearch"/>
            </HBox>

            <HBox spacing="16" alignment="CENTER_LEFT">
                <ImageView fx:id="imgCharacter" fitWidth="96" fitHeight="96" preserveRatio="true"/>
                <VBox spacing="8">
                    <Label fx:id="lblResult" textFill="#444444" wrapText="true"/>
                    <Button fx:id="btnAdd" text="친구 요청 보내기" onAction="#onAdd" disable="true"/>
                </VBox>
            </HBox>

            <Separator/>

            <!-- 필요한 추가 영역이 있으면 여기에 -->
        </VBox>
    </center>
</BorderPane>
