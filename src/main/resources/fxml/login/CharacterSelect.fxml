<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.share.dairy.controller.login.CharacterSelectController"
           stylesheets="@/css/login/login.css"
           prefWidth="800" prefHeight="600">

    <children>
        <!-- 배경 이미지 -->
        <ImageView fitWidth="800" fitHeight="600" preserveRatio="true" smooth="true">
            <image>
                <Image url="@/login_images/login_background.png"/>
            </image>
        </ImageView>

        <!-- 캐릭터 선택 카드 -->
        <StackPane alignment="CENTER">
            <children>
                <!-- 카드 배경 -->
                <Rectangle width="650" height="500" arcWidth="30" arcHeight="30"
                           styleClass="card-background"/>

                <!-- 선택 UI -->
                <VBox alignment="CENTER" spacing="30">
                    <Label text="캐릭터 선택" styleClass="title-label"/>

                    <!-- 캐릭터 박스 -->
                    <HBox fx:id="characterBox" alignment="CENTER" spacing="20" />
                    <!-- 화살표 좌우 + 페이지 정보 -->
                    <HBox alignment="CENTER" spacing="10">
                        <Button fx:id="prevBtn" text="◀" minWidth="40" mnemonicParsing="false" />
                        <Label fx:id="pageInfoLabel" text="1/3" id="pageInfoLabel" />
                        <Button fx:id="nextBtn" text="▶" minWidth="40" mnemonicParsing="false" />
                    </HBox>


                    <!-- 선택 버튼 -->
                    <Button fx:id="confirmBtn" text="선택" maxWidth="200" disable="true" onAction="#onSelectClicked"/>
                    <Hyperlink text="뒤로가기" onAction="#onBackClicked"/>
                </VBox>
            </children>
        </StackPane>
    </children>
</StackPane>
