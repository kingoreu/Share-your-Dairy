<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Rectangle?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.share.dairy.controller.login.SignUpController"
           stylesheets="@/css/login/login.css"
           prefWidth="800" prefHeight="600">

    <children>
        <!-- 배경 이미지 -->
        <ImageView fitWidth="800" fitHeight="600" preserveRatio="true" smooth="true">
            <image>
                <Image url="@/login_images/login_background.png"/>
            </image>
        </ImageView>

        <!-- 회원가입 카드 -->
        <StackPane alignment="CENTER">
            <children>
                <!-- 카드 배경 -->
                <Rectangle width="350" height="550" arcWidth="30" arcHeight="30"
                           styleClass="card-background"/>

                <!-- 입력 폼 -->
                <VBox alignment="CENTER" spacing="20">
                    <Label text="회원가입" styleClass="title-label"/>

                    <HBox spacing="10" alignment="CENTER">
                        <TextField fx:id="idField" promptText="ID(2글자 이상)" maxWidth="150"/>
                        <Button text="중복확인" onAction="#onCheckIdClicked"/>
                    </HBox>
                    <Label fx:id="idCheckLabel" styleClass="check-label" visible="false" managed="false"/>

                    <PasswordField fx:id="passwordField" promptText="비밀번호(8글자 이상)" maxWidth="250"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="비밀번호 확인" maxWidth="250"/>
                    <TextField fx:id="nickNameField" promptText="닉네임(2글자 이상)" maxWidth="250"/>

                    <HBox spacing="10" alignment="CENTER">
                        <TextField fx:id="emailField" promptText="이메일" maxWidth="150"/>
                        <Button text="중복확인" onAction="#onCheckEmailClicked"/>
                    </HBox>
                    <Label fx:id="emailCheckLabel" styleClass="check-label" visible="false" managed="false"/>

                    <Button text="Next" maxWidth="200" onAction="#onNextClicked"/>
                    <Hyperlink text="로그인으로 돌아가기" onAction="#onLoginClicked"/>
                </VBox>
            </children>
        </StackPane>
    </children>
</StackPane>
