<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.share.dairy.controller.DiaryHubController"
            styleClass="hub-root"
            prefWidth="960" prefHeight="640">

    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <!-- Top Bar -->
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 14 18;">
            <Separator styleClass="top-sep"/>
            <Label text="Diary Hub" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- Left Menu -->
    <left>
        <VBox spacing="12" style="-fx-padding: 20;" styleClass="sidebar">
            <Button text="MY DIARY"    onAction="#showDiaryHub"/>
            <Button text="OUR DIARY"   onAction="#showOurDiary"/>
            <Button text="BUDDY DIARY" onAction="#showBuddyDiary"/>
            <Separator/>
        </VBox>
    </left>

    <!-- Center: centerHolder만 유지 (FAB 없음) -->
    <center>
        <StackPane fx:id="content" BorderPane.alignment="CENTER">
            <StackPane fx:id="centerHolder"/>
        </StackPane>
    </center>
</BorderPane>
