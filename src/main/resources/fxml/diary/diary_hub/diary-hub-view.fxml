<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.share.dairy.controller.DiaryHubController"
            styleClass="hub-root"
            prefWidth="960" prefHeight="640">

    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <!-- Top Bar -->
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 14 18;">
            <Separator styleClass="top-sep"/>
            <Label text="Diary Hub" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- Left Menu -->
    <left>
        <!-- ▼ 변경 포인트: fx:id/id="sidebar" 부여 + 맨 위에 스페이서 추가 + 하단 구분선 제거 -->
        <VBox fx:id="sidebar" id="sidebar"
              spacing="30"
              style="-fx-padding: 20 16 8 16;"
              styleClass="sidebar">
            <Region VBox.vgrow="ALWAYS"/> <!-- 윗공간을 먹어서 버튼 3개를 아래로 밀어줌 -->
            <Button text="MY DIARY"    onAction="#showDiaryHub"/>
            <Button text="OUR DIARY"   onAction="#showOurDiary"/>
            <Button text="BUDDY DIARY" onAction="#showBuddyDiary"/>
        </VBox>
    </left>

    <!-- Center: centerHolder만 유지 -->
    <center>
        <StackPane fx:id="content" BorderPane.alignment="CENTER">
            <StackPane fx:id="centerHolder"/>
        </StackPane>
    </center>
</BorderPane>
