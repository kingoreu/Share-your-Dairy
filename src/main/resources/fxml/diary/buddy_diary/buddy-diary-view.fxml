<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.share.dairy.controller.BuddyDiaryController"
            prefWidth="700" prefHeight="560"
            style="-fx-background-color: transparent;">

    <HBox spacing="12"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.bottomAnchor="0">

        <!-- 좌측: 친구 리스트 (폭 고정) -->
        <StackPane prefWidth="240" minWidth="240" maxWidth="240"
                   style="-fx-background-color:#E9CFE5; -fx-background-radius:16; -fx-padding:10;"
                   VBox.vgrow="ALWAYS">
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                        style="-fx-background-color: transparent;"
                        maxHeight="Infinity" VBox.vgrow="ALWAYS">
                <VBox fx:id="buddyList" spacing="10" style="-fx-padding:6;"
                      maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
            </ScrollPane>
        </StackPane>

        <!-- 우측: 2×2 카드 -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                    style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
            <AnchorPane style="-fx-background-color:#F3EFF2; -fx-background-radius:12; -fx-padding:18;">
                <!-- 2×2 카드 그리드: 찌그러짐 방지 버전 -->
<!-- 2×2 카드 그리드: 카드 크기 고정(너무 커지지 않게) -->
<GridPane fx:id="entriesGrid"
          hgap="24" vgap="24" alignment="CENTER"
          GridPane.halignment="CENTER"
          GridPane.valignment="CENTER">
    <!-- 가로 50/50 배치하되, 셀을 꽉 채우지 않도록 설정 -->
    <columnConstraints>
        <ColumnConstraints percentWidth="50" fillWidth="false" hgrow="NEVER" halignment="CENTER"/>
        <ColumnConstraints percentWidth="50" fillWidth="false" hgrow="NEVER" halignment="CENTER"/>
    </columnConstraints>

    <!-- 세로 50/50 균일 -->
    <rowConstraints>
        <RowConstraints percentHeight="50" vgrow="NEVER" valignment="CENTER"/>
        <RowConstraints percentHeight="50" vgrow="NEVER" valignment="CENTER"/>
    </rowConstraints>

    <!-- ✅ 카드 4개: 크기 고정해서 과하게 커지지 않게 함 -->
    <!-- 필요 시 prefWidth/Height만 숫자 살짝 조정(예: 150×190 ~ 170×210) -->

    <!-- row 0 -->
    <StackPane fx:id="buddyCard1" styleClass="buddy-card"
           prefWidth="180" prefHeight="220"
           maxWidth="180" maxHeight="220"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>

<StackPane fx:id="buddyCard2" styleClass="buddy-card"
           prefWidth="180" prefHeight="220"
           maxWidth="180" maxHeight="220"
           GridPane.columnIndex="1" GridPane.rowIndex="0"/>

<StackPane fx:id="buddyCard3" styleClass="buddy-card"
           prefWidth="180" prefHeight="220"
           maxWidth="180" maxHeight="220"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

<StackPane fx:id="buddyCard4" styleClass="buddy-card"
           prefWidth="180" prefHeight="220"
           maxWidth="180" maxHeight="220"
           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

</GridPane>

            </AnchorPane>
        </ScrollPane>
    </HBox>
</AnchorPane>
